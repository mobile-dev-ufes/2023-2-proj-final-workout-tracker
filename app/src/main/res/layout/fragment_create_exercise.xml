<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentCreateExercise">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:padding="40dp"
        >

        <EditText
            android:id="@+id/createExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            />

        <EditText
            android:id="@+id/createExerciseSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sets_hint"
            android:layout_below="@+id/createExerciseName"
            />

        <EditText
            android:id="@+id/createExerciseReps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reps_hint"
            android:layout_below="@+id/createExerciseSets"
            />

        <Button
            android:id="@+id/createExerciseButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/ok"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
