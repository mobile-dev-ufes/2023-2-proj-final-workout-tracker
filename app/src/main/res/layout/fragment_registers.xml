<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentRegisters"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:padding="20dp"
        >

       <EditText
            android:id="@+id/search_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_register_hint"
        />

        <Button
            android:id="@+id/searchRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_exercise_button"
            android:layout_below="@id/search_register"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_list_registers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="30dp"
            android:layout_below="@id/searchRegisterButton"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>